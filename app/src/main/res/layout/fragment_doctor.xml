<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="VisualLintBounds">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="26sp" />

    <Spinner
        android:id="@+id/spinnerFilter"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:prompt="@string/filter_by_specialty" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:autofillHints="name"
        android:hint="@string/doctor_name"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#546E7A" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:autofillHints="phone"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:minHeight="48dp"
        android:textColorHint="#546E7A" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:autofillHints="postalAddress"
        android:hint="@string/address"
        android:inputType="text"
        android:textColorHint="#546E7A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/specialty_description" />

    <Spinner
        android:id="@+id/spinnerSpecialty"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#4CAF50"
        android:text="@string/save_doctor"
        android:textColor="@color/black"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#2196F3"
        android:text="@string/update_doctor"
        android:textColor="@color/black"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#F44336"
        android:text="@string/delete_doctor"
        android:textColor="@color/black"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/btnToSpecialty"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#090000"
        android:text="@string/go_to_specialty"
        android:textColor="@color/white"
        app:cornerRadius="0dp" />

    <ListView
        android:id="@+id/listViewDoctors"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
